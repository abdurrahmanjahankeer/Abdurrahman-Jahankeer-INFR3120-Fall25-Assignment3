<%- include('../partials/header') %>
<%- include ('../partials/main_nav') %>
<h2>Add Assignment</h2>
<form method="POST" action="/assignments/add">
  <div>
    <label>Assignment Title: <input name="assignmentTitle" required /></label>
  </div>
  <div>
    <label>Class: <input name="class" required /></label>
  </div>
  <div>
    <label>Project Explanation:<br>
      <textarea name="projectExplanation" required></textarea>
    </label>
  </div>
  <div>
    <label>Project Members (comma separated): <input name="projectMembers" required /></label>
  </div>
  <div>
    <label>Year of Completion: <input name="yearOfCompletion" type="number" required /></label>
  </div>
  <button type="submit">Add Assignment</button>
</form>
<%- include('../partials/footer') %>
