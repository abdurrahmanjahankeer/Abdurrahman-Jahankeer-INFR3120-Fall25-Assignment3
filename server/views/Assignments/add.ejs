<%# This pulls in the site's header so every page matches %>
<%- include('../partials/header') %>

<%# This adds the navigation bar with menu links %>
<%- include('../partials/main_nav') %>

<%# This is the main wrapper for all assignment pages %>
<div id="page-wrapper">
    <div class="container">
        <div class="row">
            <div class="offset-md-3 col-md-6">

                <%# Here’s the page title, either from the page or it just says "Add Assignment" %>
                <h1><%= title || "Add Assignment" %></h1>

                <%# This is the form where I will write my assignment info and save it %>
                <form class="form" method="post" action="/assignments/add">

                    <%# Enter the assignment's name here %>
                    <div class="form-group">
                        <label for="assignmentTitleField">Assignment Title</label>
                        <input type="text" class="form-control" id="assignmentTitleField"
                               name="assignmentTitle" placeholder="Enter assignment title" required>
                    </div>

                    <%# Write what class this is for (like Math, Science) %>
                    <div class="form-group">
                        <label for="classField">Class</label>
                        <input type="text" class="form-control" id="classField"
                               name="class" placeholder="Enter class name" required>
                    </div>

                    <%# Explain what the project was about %>
                    <div class="form-group">
                        <label for="projectExplanationField">Project Explanation</label>
                        <textarea class="form-control" id="projectExplanationField"
                                  name="projectExplanation" rows="3" placeholder="Describe the project" required></textarea>
                    </div>

                    <%# List all team members, separated by commas %>
                    <div class="form-group">
                        <label for="projectMembersField">Project Members (comma separated)</label>
                        <input type="text" class="form-control" id="projectMembersField"
                               name="projectMembers" placeholder="e.g. Jane Doe, John Doe" required>
                    </div>

                    <%# What year did you finish the project? %>
                    <div class="form-group">
                        <label for="yearOfCompletionField">Year of Completion</label>
                        <input type="number" class="form-control" id="yearOfCompletionField"
                               name="yearOfCompletion" placeholder="e.g. 2025" required>
                    </div>
                    <br>

                    <%# This button saves your assignment to the list %>
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i> Submit
                    </button>

                    <%# This button takes you back if you don’t want to save %>
                    <a href="/assignments" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel
                    </a>

                </form>
            </div>
        </div>
    </div>
</div>

<%# This adds the footer at the bottom of the page %>
<%- include('../partials/footer') %>