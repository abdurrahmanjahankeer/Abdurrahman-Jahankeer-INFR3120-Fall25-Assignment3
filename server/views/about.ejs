<%# This brings in the site’s header so every page looks the same %>
<%- include('partials/header') %>

<%# This adds the menu at the top of the page %>
<%- include('partials/main_nav') %>

<%# This is where the main About Me content goes %>
<div id="page-wrapper">
    <!-- Main About Me Page Container -->
    <div class="container-fluid py-4" style="min-height: 90vh;">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">

                <!-- This is the page title so everyone knows what this page is about -->
                <h1 class="mb-4 text-white">About Me</h1>

                <!-- This shows my photo and name in a nice box -->
                <div style="display:inline-block; margin-bottom:20px;">
                    <div style="border:4px solid #fff; display:inline-block;">
                        <img src="/Asset/images/AJ-web-pic.png" alt="Abdurrahman Jahankeer" class="img-fluid rounded" style="width: 260px; height: 300px; object-fit:cover;">
                        <div style="background:#ffa600; color:#fff; font-weight:600; padding:7px 0;">
                            Abdurrahmaan Jahankeer<br>(January 2025)
                        </div>
                    </div>
                </div>

                <!-- This is my introduction so people know who I am -->
                <div class="mt-4 mb-4">
                    <h4 class="text-white">Hey, I am a 19 year old <span style="color: orange;">Cybersecurity</span> student at Ontario Tech University.</h4>
                </div>

                <!-- This shows my About Me video to make things more fun -->
                <div class="mb-4 d-flex justify-content-center" style="min-width: 320px;">
                    <div style="border: 5px solid #fff; padding: 0.5em;">
                        <video controls poster="/Asset/images/AJ-about-me-poster.png" style="max-width: 600px; width:100%;">
                            <source src="/Asset/videos/AJ-about-me.mp4" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                </div>

                <!-- This is a list of my favorite video games so you can learn about what I like! -->
                <div class="mt-3 mb-2">
                    <p class="text-white fs-5">
                    Games: <span style="color:#fff">Minecraft, Rocket League, Fortnite, Roblox, Rainbow Six Siege, Call of Duty, Clash of Clans, Clash Royale, DragonCity, etc.</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<%# This brings in the page’s footer to finish off the page %>
<%- include('partials/footer') %>