<%- include('../partials/header') %>
<h2>Assignments</h2>
<a href="/assignments/add">Add New Assignment</a>
<ul>
  <% assignments.forEach(a => { %>
    <li>
      <strong><%= a.assignmentTitle %></strong> (<%= a.class %>), Year: <%= a.yearOfCompletion %>
      <br/>
      <small>Partners: <%= a.projectMembers.join(', ') %></small>
      <br/>
      <em><%= a.projectExplanation %></em>
      <br/>
      <a href="/assignments/edit/<%= a._id %>">Edit</a>
      <a href="/assignments/delete/<%= a._id %>">Delete</a>
      <hr/>
    </li>
  <% }) %>
</ul>
<%- include('../partials/footer') %>